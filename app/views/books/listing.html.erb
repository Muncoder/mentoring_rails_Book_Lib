<div class="row">
	<div class="col-md-3">
		<%= render'book_menu'%>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">

			<div class="panel-heading">
				listing
			</div>

			<div class="panel-body">
				<div class="container">
					<%= form_for @book do |b|%>

				<div class="row">
					<div class="col-md-4 select">
						<div class="form-group">
							<label>Subjects</label>
							<%= b.select :subject, [["Arts","Arts"], ["Animals","Animals"], ["Fiction","Fiction"], ["Science & Mathematics", "Science & Mathematics"]], 
							     id: "subject", prompt: " Select...", class: "form-control" %>
						</div>
					</div>

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Book Type</label>
							<%= b.select :book_type, [["Architecture","Architecture"], [" Art Instruction"," Art Instruction"], [" Art History"," Art History"]],
							     id: "book_type", prompt: " Select...", class: "form-control" %>
						</div>
					</div>

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Author Name</label>
							<%= b.select :author_name, [["Mahi Chowdhury","Mahi Chowdhury"], ["Oshim","Oshim"], ["Bishal","Bishal"], ["Rayhan ", "Rayhan "]], 
							     id: "author_name", prompt: " Select...", class: "form-control" %>
						</div>
					</div>

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Pages</label>
							<%= b.select :pages, [["100", 100], ["150", 150], ["200+", 200]], 
							     id: "pages", prompt: " Select...", class: "form-control" %>
						</div>
					</div>
				</div><br><br>
					<div class="row">
						<div class="col-md-4">
							<div><%=  b.submit "Save", class: "btn btn-normal" %></div>
						</div>
						<div class="col-md-4">
							<%= link_to 'Book List', books_path, class: "btn btn-form" %>
						</div>

					</div>

				
				

			<% end -%>
				</div>
			</div>
		</div>
	</div>

</div>

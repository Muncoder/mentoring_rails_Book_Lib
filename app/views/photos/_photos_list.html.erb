<% if @photos.count > 0 %>
	<br><br>

	<div class="row">
		<% @photos.each do |ph|%>
			<div class="col-md-4">
				<div class="panel panel-default">
					<div class="panel-heading preview">
						<%= image_tag ph.image.url()%>
					</div>

					<div class="panel-body">
						<span class="pull-right">
							<%= link_to book_photo_path(ph.book_id, ph), remote: true, method: :delete, data: {confirm: "Are you sure?"}  do  %>
							<i class="fas fa-trash-alt"></i>

							<% end -%>
						</span>
					</div>


				</div>
			</div>
		<% end -%>
	</div>

<% end -%>